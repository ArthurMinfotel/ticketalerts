#pluginTicketAlertsCentralList tr:first-child th {
    background-color: #dee2e6;
}
#pluginTicketAlertsCentralList tr:nth-child(2) th {
    background-color: #f8f9fa;
    padding-bottom: 0;
}
#pluginTicketAlertsCentralList tr:nth-child(3) th {
    background-color: #fff;
    border-bottom: 1px solid #eee;
}
#personal-tabs {
    display: flex;
    flex-flow: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-end;
    overflow: hidden;
    padding-top: 5px;
}
#personal-tabs li {
    margin: 0 0.25rem;
    border: none;
    border-radius: 0.25rem 0.25rem 0 0;
}
#personal-tabs li a {
    display: block;
    padding: 0 1.5rem;
    height: 3.3rem;
    line-height: 3.3rem;
    color: #9d9d9c;
    background-color: #dee2e6;
    transition: background-color 0.15s ease-in-out, color 0.15s ease-in-out;
    cursor: pointer;
    font-weight: normal;
}
#personal-tabs li a:not(.inactive) {
    cursor: text;
    box-shadow: 0 1px 1px 0 rgba(108, 117, 125, 0.08), 0 1px 3px 1px rgba(108, 117, 125, 0.16);
    background-color: #fff;
    color: #212529;
    font-weight: bold;
}
#personal-tabs li a.inactive:hover {
    background-color: #ced4da;
    color: #212529;
}